<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/company_listview_row">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/company_symbol_row"
        android:textColor="#FFFFFFFF"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/company_name_row"
        android:textColor="#C6C6C6"
        android:layout_below="@+id/company_symbol_row"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/company_stock_row"
        android:textColor="#FFFFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/company_symbol_row"
        android:layout_alignBottom="@+id/company_name_row"
        android:gravity="center"
        android:layout_centerVertical="true"/>

</RelativeLayout>